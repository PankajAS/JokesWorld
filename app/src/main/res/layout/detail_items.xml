<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="@drawable/list_radious"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:cacheColorHint="#ff000000"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/detail_title"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/black"
            android:padding="5dp"
            android:layout_marginLeft="16dp"
            tools:ignore="HardcodedText,RtlHardcoded,UnusedAttribute"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/category_image"
            android:layout_toEndOf="@+id/category_image"
            android:layout_marginRight="40dp"
            android:lines="3" />

        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/right_arrow" >

        </ImageView>

    </RelativeLayout>
</LinearLayout>