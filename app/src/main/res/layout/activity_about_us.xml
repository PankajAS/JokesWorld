                android:layout_alignLeft="@+id/textView6"
                android:layout_alignStart="@+id/textView6" />

            <TextView
                android:text="3. M M Khatib"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:layout_below="@+id/textView7"
                android:layout_alignLeft="@+id/textView7"
                android:layout_alignStart="@+id/textView7" />

            <TextView
                android:text="This Is Our First App In Android Market Means We Are Starting With This App. After This We Are Coming With Some More New  Apps With More New Ideas. If You Have Some New Diffrent Idea Than Send Us A E-Mail."
