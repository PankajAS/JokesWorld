<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="@drawable/list_radious"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:cacheColorHint="#ff000000"
        android:layout_marginTop="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/category_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher"

            android:layout_margin="7dp"/>

        <TextView
            android:id="@+id/Title"
            android:layout_gravity="center_horizontal"
            android:layout_width="161dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal|bold"
            android:textColor="@android:color/black"
            android:padding="5dp"
            android:layout_marginLeft="16dp"
            tools:ignore="HardcodedText,RtlHardcoded,UnusedAttribute"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/category_image"
            android:layout_toEndOf="@+id/category_image"
            android:layout_marginStart="16dp" />

        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/right_arrow" >

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ivArrow"
            android:layout_toStartOf="@+id/ivArrow"
            android:id="@+id/txtbadge_count"
            android:textSize="14sp"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:textColor="@android:color/white"
            android:background="@drawable/badge_count"
            android:textStyle="bold"
            android:minHeight="0dp" />

    </RelativeLayout>
</LinearLayout>