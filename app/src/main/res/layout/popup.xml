<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_blue_dark"
        android:layout_gravity="clip_vertical"
        android:layout_margin="30dp">

        <Button
            android:text="SharOnWhatsApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnSharOnWhatsApp"
            android:layout_alignParentBottom="true"
            android:layout_margin="15dp" />

        <Button
            android:text="ShareOnInstagram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnShareOnInstagram"
            android:layout_alignParentBottom="true"
            android:layout_margin="15dp" />

        <Button
            android:text="ShareOnFB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnShareOnFB"
            android:layout_alignParentBottom="true"
            android:layout_margin="15dp" />

        <Button
            android:text="ShareOnSMS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnShareOnSMS"
            android:layout_alignParentBottom="true"
            android:layout_margin="15dp" />

        <Button
            android:id="@+id/close_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Cancel"
            android:background="@android:color/holo_red_dark"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>